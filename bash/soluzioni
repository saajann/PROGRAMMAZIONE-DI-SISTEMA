cp /etc/passwd ./
head -n 10 /etc/passwd
tail -n 10 /etc/passwd | head -n 5
wc -l /etc/passwd
cat /etc/passwd | cut -d ":" -f 1,7 | grep "/bin/bash"
alias ll='ls -al'
ls -lS
ls -lt 
